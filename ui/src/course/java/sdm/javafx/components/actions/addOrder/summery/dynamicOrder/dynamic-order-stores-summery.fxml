<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxWidth="724.0" stylesheets="@dynamic-order-stores-summery-style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="course.java.sdm.javafx.components.actions.addOrder.summery.dynamicOrder.DynamicOrderStoresSummeryController">
   <top>
      <Label id="header-title" text="Stores Summery - Best Cart" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="20.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="nextButton" minWidth="80.0" mnemonicParsing="false" onAction="#nextButtonAction" style="-fx-background-color: #3b10d7;" text="Next" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" maxWidth="724.0" BorderPane.alignment="CENTER">
         <content>
            <FlowPane fx:id="flowPane" maxWidth="722.0" prefHeight="353.0" prefWidth="722.0" style="-fx-background-color: #fff4de;" />
         </content>
      </ScrollPane>
   </center>
</BorderPane>
