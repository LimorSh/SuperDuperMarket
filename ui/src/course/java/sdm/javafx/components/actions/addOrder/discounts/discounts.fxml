<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="course.java.sdm.javafx.components.actions.addOrder.discounts.DiscountsController">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" stylesheets="@discounts-style.css">
         <content>
            <FlowPane fx:id="flowPane" hgap="7.0" prefHeight="600.0" prefWidth="900.0" vgap="20.0">
               <padding>
                  <Insets bottom="5.0" left="150.0" right="5.0" top="5.0" />
               </padding>
            </FlowPane>
         </content>
      </ScrollPane>
   </center>
   <top>
      <VBox alignment="CENTER" prefHeight="62.0" prefWidth="826.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Special Offers!" textFill="#a60dab">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="You can get the following discounts:">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="902.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextButtonAction" prefHeight="25.0" prefWidth="114.0" text="Next">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
