<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="course.java.sdm.javafx.components.main.SuperDuperMarketController">
   <content>
      <BorderPane fx:id="superDuperMarketBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1050.0" stylesheets="@super-duper-market-style.css">
         <left>
            <VBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label id="data-label" fx:id="titleVBox" disable="true" layoutX="50.0" text="Data">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets top="15.0" />
                     </padding>
                  </Label>
                  <VBox prefWidth="100.0">
                     <children>
                        <Button fx:id="customersButton" mnemonicParsing="false" onAction="#customersButtonAction" styleClass="data-button" text="Customers">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="itemsButton" mnemonicParsing="false" onAction="#itemsButtonAction" prefWidth="73.0" styleClass="data-button" text="Items">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="storesButton" mnemonicParsing="false" onAction="#storesButtonAction" prefWidth="73.0" styleClass="data-button" text="Stores">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="ordersButton" mnemonicParsing="false" onAction="#ordersButtonAction" prefWidth="73.0" styleClass="data-button" text="Orders">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </left>
         <top>
            <HBox id="h-box" alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="loadFileButton" mnemonicParsing="false" onAction="#loadFileButtonAction" prefWidth="85.0" text="Load File" />
                  <Button fx:id="updateItemButton" mnemonicParsing="false" onAction="#updateItemButtonAction" prefWidth="85.0" text="Update Item" />
                  <Button fx:id="addOrderButton" mnemonicParsing="false" onAction="#addOrderButtonAction" prefWidth="85.0" text="Add Order" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </content>
</ScrollPane>
