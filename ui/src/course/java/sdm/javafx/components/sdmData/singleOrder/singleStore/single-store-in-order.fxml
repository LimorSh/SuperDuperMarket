<BorderPane prefHeight="280.0" prefWidth="601.0" stylesheets="@single-store-in-order-style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="course.java.sdm.javafx.components.sdmData.singleOrder.singleStore.SingleStoreInOrderController">
   <top>
      <HBox prefHeight="37.0" prefWidth="726.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="nameValueLabel" alignment="CENTER" contentDisplay="CENTER">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <bottom>
      <TableView id="table-view" fx:id="purchasedItemsTableView" prefHeight="174.0" prefWidth="590.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="itemIdCol" prefWidth="43.0" text="ID" />
          <TableColumn fx:id="itemNameCol" prefWidth="79.0" text="Name" />
            <TableColumn fx:id="itemPurchaseCategoryCol" prefWidth="115.0" text="Purchase Category" />
            <TableColumn fx:id="itemQuantityCol" prefWidth="63.0" text="Quantity" />
            <TableColumn fx:id="itemPricePerUnitCol" prefWidth="119.0" text="Price Per Unit" />
            <TableColumn fx:id="itemTotalCostCol" prefWidth="95.0" text="Total Cost" />
            <TableColumn fx:id="itemDiscountCol" prefWidth="85.0" text="Discount" />
        </columns>
      </TableView>
   </bottom>
   <center>
      <VBox prefHeight="48.0" prefWidth="726.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="37.0" prefWidth="726.0" spacing="10.0">
               <children>
                  <Label text="ID:" />
                  <Label fx:id="idValueLabel" minWidth="60.0" />
                  <Label text="PPK:" />
                  <Label fx:id="ppkValueLabel" minWidth="60.0" />
                  <Label text="Distance (KM):" />
                  <Label fx:id="distanceFromTheCustomerValueLabel" minWidth="60.0" />
                  <Label text="Delivery cost:" />
                  <Label fx:id="deliveryCostValueLabel" minWidth="60.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <Label text="Purchased Items:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </center>
</BorderPane>
