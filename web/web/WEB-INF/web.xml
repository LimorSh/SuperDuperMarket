<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.FileUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SellZonesTableServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.SellZonesTableServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChargeCreditServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.ChargeCreditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountTransactionsTableServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.AccountTransactionsTableServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/userslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/sdm/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/pages/dashboard/uploadFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SellZonesTableServlet</servlet-name>
        <url-pattern>/sellZonesTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChargeCreditServlet</servlet-name>
        <url-pattern>/pages/dashboard/chargeCredit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountTransactionsTableServlet</servlet-name>
        <url-pattern>/accountTable</url-pattern>
    </servlet-mapping>
</web-app>