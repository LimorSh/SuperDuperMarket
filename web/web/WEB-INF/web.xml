<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.index.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.dashboard.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.dashboard.FileUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SellZonesTableServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.dashboard.SellZonesTableServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChargeCreditServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.dashboard.ChargeCreditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountTransactionsTableServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.dashboard.AccountTransactionsTableServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SellZoneItemsTableServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.SellZoneItemsTableServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SellZoneStoresServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.SellZoneStoresServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SellZoneWasChosenServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.dashboard.SetChosenSellZoneServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.sellZone.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetChosenSellZone</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.sellZone.GetChosenSellZoneServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RedirectAddOrderServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.sellZone.RedirectAddOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddOrderServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.addOrder.AddOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetStoreDeliveryCostServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.addOrder.GetStoreDeliveryCostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDistanceFromStoreServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.addOrder.GetDistanceFromStoreServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDynamicOrderStoresDetailsServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.addOrder.GetDynamicOrderStoresDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetDiscountsServlet</servlet-name>
        <servlet-class>course.java.sdm.web.servlets.addOrder.GetDiscountsServlet</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/userslist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/pages/dashboard/uploadFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SellZonesTableServlet</servlet-name>
        <url-pattern>/sellZonesTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChargeCreditServlet</servlet-name>
        <url-pattern>/pages/dashboard/chargeCredit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountTransactionsTableServlet</servlet-name>
        <url-pattern>/accountTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SellZoneItemsTableServlet</servlet-name>
        <url-pattern>/itemsTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SellZoneStoresServlet</servlet-name>
        <url-pattern>/stores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SellZoneWasChosenServlet</servlet-name>
        <url-pattern>/sellZoneChosen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/pages/sellZone/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetChosenSellZone</servlet-name>
        <url-pattern>/setTitle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RedirectAddOrderServlet</servlet-name>
        <url-pattern>/pages/sellZone/addOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddOrderServlet</servlet-name>
        <url-pattern>/pages/sellZone/addOrder/createNewOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetStoreDeliveryCostServlet</servlet-name>
        <url-pattern>/setStoreDeliveryCost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDistanceFromStoreServlet</servlet-name>
        <url-pattern>/setDistanceFromStore</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDynamicOrderStoresDetailsServlet</servlet-name>
        <url-pattern>/setDynamicOrderStoresDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetDiscountsServlet</servlet-name>
        <url-pattern>/setDiscounts</url-pattern>
    </servlet-mapping>
</web-app>